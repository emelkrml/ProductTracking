@model ProductTrackingApp.Entities.Concrete.Product

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h3 class="h3 mb-0 text-gray-800"><b>@Model.ProductName</b> ürününü sileceksiniz!</h3>
</div>

@using (Html.BeginForm())
{

    @Html.ValidationSummary(false)

    <div class="form-group">
        <span>Ürün Adı</span>
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control form-control-user" })
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            @* TODO: Dropdown ile kategori isimleri gelecek. *@
            <span>Kategori</span>
            @Html.TextBoxFor(model => model.CategoryId, new { @class = "form-control form-control-user" })
        </div>
        <div class="col-sm-6">
            <span>Birim Fiyatı</span>
            @Html.TextBoxFor(model => model.UnitPrice, new { @class = "form-control form-control-user" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <span>Stoktaki Miktar</span>
            @Html.TextBoxFor(model => model.UnitsInStock, new { @class = "form-control form-control-user" })
        </div>
        <div class="col-sm-6">
            <span>Birim Başına Düşen Miktar</span>
            @Html.TextBoxFor(model => model.QuantityPerUnit, new { @class = "form-control form-control-user" })
        </div>
    </div>

    <a href="/Product/Index" class="btn btn-secondary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Geri</span>
    </a>
    <button type="submit" class="btn btn-danger btn-icon-split float-right">
        <span class="icon text-white-50">
            <i class="fas fa-trash"></i>
        </span>
        <span class="text">Sil</span>
    </button>
}